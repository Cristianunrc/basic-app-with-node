<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="icon" type="img/pf" href="../img/portfolio.jpg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <%- include('partials/head') %>
  <!-- Google reCAPTCHA -->
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
  <%- include('partials/navigation') %>
  <div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white text-center">
      <div class="card-header">
        <h3>Contact me</h3>
      </div>
      <div class="card-body text-start">
        <form action="/send-email" method="POST">
          <div class="form-group mb-3">
            <input type="email" name="email" placeholder="Your email" class="form-control" required>
          </div>
          <div class="form-group mb-3">
            <textarea name="message" rows="4" class="form-control" placeholder="Write a message..." required></textarea>
          </div>
          <div class="g-recaptcha mb-3" data-sitekey="<%= siteKey %>" data-callback="enabledRecaptcha"></div>
          <div class="text-center">
            <button class="btn btn-primary btn-block" id="submit-button" disabled>
              Send <i class="fa-regular fa-paper-plane ms-2"></i>
            </button>
          </div>
        </form>
        <% if (typeof errorMessage !== 'undefined') { %>
          <div class="mt-3 alert alert-danger">
            <%= errorMessage %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="contact-info position-asbolute start-0 bottom-0 ms-5 mb-5">
    <p><i class="fa-solid fa-location-dot me-2"></i>Río Cuarto, Córdoba, Argentina</p>
    <p><i class="fa-solid fa-phone me-2"></i>+5493534296631</p>
    <p>
      <a href="https://github.com/Cristianunrc" target="_blank" class="text-white text-decoration-none">
        <i class="fa-brands fa-github me-2"></i> GitHub
      </a>
    </p>
    <p>
      <a href="https://www.linkedin.com/in/cristian-herrera-7653b421b/" target="_blank" class="text-white text-decoration-none">
        <i class="fa-brands fa-linkedin me-2"></i> LinkedIn
      </a>
    </p>
  </div>
  <script>
    function enabledRecaptcha() {
      document.getElementById("submit-button").disabled = false
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>