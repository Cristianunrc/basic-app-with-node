<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navigation') %>
  <div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white text-center">
      <div class="card-header">
        <h3>Contact me</h3>
      </div>
      <div class="card-body text-start">
        <form action="/send-email" method="POST">
          <div class="form-group mb-3">
            <input type="email" name="email" placeholder="Your email" class="form-control" required>
          </div>
          <div class="form-group mb-3">
            <textarea name="message" rows="4" class="form-control" placeholder="Write a message..." required></textarea>
          </div>
          <div class="text-center">
            <button class="btn btn-primary btn-block">
              Send <i class="fa-regular fa-paper-plane"></i>
            </button>
          </div>
        </form>
        <% if (typeof errorMessage !== 'undefined') { %>
          <div class="mt-3 alert alert-danger">
            <%= errorMessage %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="contact-info position-asbolute start-0 bottom-0 ms-4">
    <p><i class="fa-solid fa-location-dot me-2"></i>Río Cuarto, Córdoba, Argentina</p>
    <p><i class="fa-solid fa-phone me-2"></i>+5493534296631</p>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
